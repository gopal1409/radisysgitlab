image: maven:3.6.1-jdk-11
variables: 
    MAVEN_OPTS: "-Dhttps.protocols=TLSv1.2 -Dmaven.repo.local=.m2/repository -Dorg.slf4j.simpleLogger.log.org.apache.maven.cli.transfer.Slf4jMavenTransferListener=WARN -Dorg.slf4j.simpleLogger.showDateTime=true -Djava.awt.headless=true"
    MAVEN_CLI_OPTS: "--batch-mode -errors --fail-at-end"
#we need to catch the maven reposiutory so that each job does not have to download the package
cache:
    key: mavenrepo
    paths:
        - ./.m2/repository
stages:
    - build
    - checkstyle
    - pmd
    - spotbugs
    - code-coverage
build-Stage:
    stage: build
    script:
        - 'mvn $MAVEN_CLI_OPTS install'
#checkstyle source code standard review
checkstyle-stage:
    stage: checkstyle
    script:
          - 'mvn $MAVEN_CLI_OPTS -Pcicdprofile checkstyle:check'
        
#PMD code analysis
pmd-stage:
    stage: pmd
    script:
      - 'mvn $MAVEN_CLI_OPTS -Pcicdprofile pmd:check'
#spot bug
spotbug-stage:
    stage: spotbugs
    script:
      - 'mvn $MAVEN_CLI_OPTS -Pcicdprofile spotbugs:check'

code-coverage-stage:
    stage: code-coverage
    script:
      - 'mvn $MAVEN_CLI_OPTS -Pcicdprofile install'





